<h1> Basket</h1>
<div id="card">
    {{#if basket.items.length}}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Count</th>
                    <th>Deystie</th>
                </tr>
            </thead>
            <tbody>
                {{#each basket.items}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class='btn btn-small js-remove' data-id='{{id}}'> Удалить </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong>Price:</strong> <span class='price'> {{basket.price}}</span></p>
    </div>
    {{else}}
        <p>Basket is empty</p>
    {{/if}}
</div>